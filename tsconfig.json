{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*"]
}
